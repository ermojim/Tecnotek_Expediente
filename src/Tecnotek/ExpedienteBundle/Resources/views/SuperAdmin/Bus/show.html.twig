                        <label><span class="text-form" style="min-width: 150px;">{% trans %}label.driver{% endtrans %}</span><input type="text" id="driver" name="driver" required="required" value=""></label>

                        <label><span class="text-form" style="min-width: 150px;">{% trans %}label.capacity{% endtrans %}</span><input type="text" id="capacity" name="capacity" required="required" value=""></label>

                        <label><span class="text-form" style="min-width: 150px;">{% trans %}label.riteve{% endtrans %}</span><input type="text" id="riteve" name="riteve" required="required" value=""></label>

