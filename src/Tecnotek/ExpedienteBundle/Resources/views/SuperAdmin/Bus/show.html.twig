                        <div class="formErrors">{{ form_errors(form.ins) }}</div>
                        <label><span class="text-form" style="min-width: 150px;">{% trans %}label.ins{% endtrans %}</span>{{ form_widget(form.ins) }}</label>

                        <div class="formErrors">{{ form_errors(form.permission) }}</div>
                        <label><span class="text-form" style="min-width: 150px;">{% trans %}label.permission{% endtrans %}</span>{{ form_widget(form.permission) }}</label>

                        <div class="formErrors">{{ form_errors(form.route) }}</div>
                        <label><span class="text-form" style="min-width: 150px;">{% trans %}label.route{% endtrans %}</span>{{ form_widget(form.route) }}</label>

